@model List<tp03.Models.ViewModels.UserViewModel>
<div class="text-center">
    <h2 class="display-4">Listado de cadetes</h2>
</div>

<div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Nivel Autorización</th>
        </tr>
        @foreach (var element in Model)
        {
            <tr>
                <td>@element.UserId</td>
                <td>@element.Name</td>
                <td>@element.Email</td>
                <td>@element.Type</td>
            </tr>     
        }
    </table>
</div>