@model List<TP3.Models.ViewModels.DeliveryMViewModel>
<div class="text-center">
    <h2 class="display-4">Cadetes dados de baja</h2>
</div>

<div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Direccion</th>
            <th>CadeteriaID</th>
            <th>Cantidad de pedidos realizados</th>
            <th>Cantidad de pedidos activos</th>
            <th>Acciones</th>
        </tr>
        @foreach (var elemento in Model)
        {
            if(elemento.Active == 0)
            {
                <tr>
                    <td>@elemento.Id</td>
                    <td>@elemento.Name</td>
                    <td>@elemento.PhoneNum</td>
                    <td>@elemento.Adress</td>
                    <td>@elemento.Courier</td>
                    <td>@elemento.OrdersComplete</td>
                    <td>@elemento.OrdersActive</td>
                    <td>
                        <a button type="button" class="btn btn-secondary btn-sm" href="ReadmitCadete?_Id=@elemento.Id">Readmitir</a>
                    </td>
                </tr>                
            }
        }
    </table>
</div>